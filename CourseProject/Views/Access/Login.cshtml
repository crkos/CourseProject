@model CourseProject.ViewModels.LoginVM;
@{
    Layout = null;
}

<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <div class="row mt-5 justify-content-center">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    Log In
                </div>
                <div class="card-body">
                    <form asp-action="Login" asp-controller="Access" method="post" novalidate class="needs-validation">
                         <div class="input-group mb-3">
                            <input class="form-control" type="email" placeholder="johndoe@email.com" required asp-for="Email" />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Enter a valid email.
                            </div>
                         </div>
                        <div class="input-group mb-3">
                            <input class="form-control mb-3" type="password" placeholder="Password" required asp-for="Password" minLength="1"/>
                            <div class="invalid-feedback">
                                Enter a password
                            </div>
                        </div>
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">
                                Log in
                            </button>
                        </div>

                        @if (ViewData["Message"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Message"]
                            </div>
                        }
                        Don't have an account? <a asp-controller="Access" asp-action="Register">Register</a>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/validation.js"></script>
</body>
</html>