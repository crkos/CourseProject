@model CourseProject.ViewModels.UserVM;
@{
    Layout = null;
}

<html >
    <head>
        <title>Register</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>

        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                        Register
                    </div>
                    <div class="card-body">
                    <form asp-action="Register" asp-controller="Access" method="post" novalidate class="needs-validation">
                        <div class="input-group mb-3">
                            <input class="form-control" type="text" placeholder="Username" required asp-for="Name" />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Enter a username.
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input class="form-control" type="text" placeholder="Last Name" required asp-for="LastName" />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Enter your last name.
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input class="form-control" type="email" placeholder="johndoe@email.com" required asp-for="Email" />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Enter a valid email.
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input class="form-control" type="password" placeholder="Password" required asp-for="Password" />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Enter a password
                            </div>
                        </div>
                        <div class="input-group">
                            <input class="form-control mb-3" type="password" placeholder="Confirm Password" required asp-for="ConfirmPassword" />
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Confirm your password
                            </div>
                        </div>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">
                                    Register
                                </button>
                            </div>

                        @Html.ValidationSummary(true)


                        @if (ViewData["Message"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Message"]
                            </div>
                        }
                        Already have an account? <a asp-controller="Access" asp-action="Login">Login</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/validation.js"></script>
    </body>
</html>